#! /bin/bash

DELIMETER=';'
DELIMITED=

function show_help {
  printf "Prints colors from material design\n\n"
  printf "Usage: ${0:material-color} [OPTS] <color-names...>\n\n"
  printf "Options:\n\n"
  printf "(-f|--foreground)  COLOR sets the terminal foreground\n"
  printf "(-b|--background)  COLOR sets the terminal background\n"
  printf "(-s|--sample)      COLOR samples the color in the terminal\n"
  printf "(-F|--delimiter)   COLOR sets the delimiter when using delimited output mode (and -f or -b) (default ;)\n"
  printf "(-d|--delimited)         output in RGB format\n"
  printf "(-H|--hex)               output in hex format (default)\n"
  printf "(-l|--list-colors)       show all possible colors\n"
  printf "(-h|--help)              show this message\n"
  exit 0
}

function main {
  if [[ $# -eq 0 ]]; then
    show_help
  fi
  while [[ $# -ge 1 ]]; do
    local arg="${1}"
    case "${arg}" in
      '-f'|'--foreground')
	set_fg "${!2}"
        shift
	;;
      '-b'|'--backgound')
        set_bg "${!2}"
        shift
        ;;
      '-s'|'--sample')
        list_color "${2}"
        shift
	;;
      '-d'|'--delimited')
	DELIMITED=1
	;;
      '-H'|'--hex')
        unset DELIMITED
	;;
      '-F'|'--delimiter')
        DELIMITER="${2}"
        shift
	;;
      '-l'|'--list-colors')
        list_colors
	;;
      '-h'|'--help')
	show_help
	;;
      *)
	output_color "${1}"
	printf "\n"
    esac	
    shift
  done
}

function hex_to_delimeted {
  local hex="${1}"
  local delimeter="${DELIMITER-;}"
  local red=$(( 16#${hex:0:2} ))
  local green=$(( 16#${hex:2:2} ))
  local blue=$(( 16#${hex:4:2} ))
  printf "${red}${delimeter}${green}${delimeter}${blue}"
}

function output_color {
  if [[ -n "${DELIMITED}" ]]; then
    printf "%s" "$(hex_to_delimeted "${!1}")"
  else
    printf "#%s" "${!1}"
  fi
}

function set_fg {
  local color="$(hex_to_delimeted "${1}")"
  printf "\x1b[38;2;${color}m"
}

function set_bg {
  local color="$(hex_to_delimeted "${1}")"
  printf "\x1b[48;2;${color}m"
}

function reset_bg {
  printf "\x1b[0m"
}

function list_color {
  local color="${1}"
  printf "$(set_bg "${!color}") %14s $(reset_bg)" "${color}"
}

